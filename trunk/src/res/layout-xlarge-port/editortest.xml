<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_sub"
            android:text="@string/filelist"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_down"
            android:orientation="horizontal"
            android:padding="20dp" >

            <ListView
                android:id="@+filelist/list"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >
            </ListView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp"
                android:paddingTop="5dp" >

                <Button
                    android:id="@+filelist/add"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addfile" />

                <Button
                    android:id="@+filelist/create"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addlatex" />

                <com.inmobi.androidsdk.IMAdView
                    android:id="@+principal/adview"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    adSlot="11"
                    appId="4028cb1334ef46a90134ffb035ec01f9" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_sub"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visualisation"
                    android:textSize="30dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+filelist/save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="@string/save"
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+filelist/compile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="@string/compile"
                        android:textSize="15dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/login_down"
                android:orientation="horizontal"
                android:padding="20dp" >

                <EditText
                    android:id="@+filelist/text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|left"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+filelist/image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|left"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>