<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:focusable="true" android:focusableInTouchMode="true">
	<LinearLayout android:layout_height="0dp"
		android:layout_width="fill_parent" android:layout_weight="1">
		    <com.inmobi.androidsdk.IMAdView
        android:id="@+principal/adview"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        adSlot="11"
        appId="4028cb1334ef46a90134ffb035ec01f9" />
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_weight="2"
		android:orientation="vertical">
		<LinearLayout android:layout_margin="50dp"
			android:layout_width="fill_parent" android:layout_height="0dp"
			android:layout_weight="1" android:orientation="vertical"
			>
			<TextView android:text="@string/connection" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:textSize="30dp"
				android:background="@drawable/login_sub"/>

			<LinearLayout android:orientation="horizontal"
				android:padding="20dp"
				android:layout_height="fill_parent" android:layout_width="fill_parent"
				android:background="@drawable/login_down">
				<LinearLayout android:orientation="vertical"
					android:layout_weight="1" android:layout_width="0dp"
					android:layout_height="fill_parent">
					<TextView android:text="@string/login" android:layout_height="0dp"
						android:layout_width="fill_parent" android:layout_weight="1"
						android:gravity="center_vertical"
						/>
					<TextView android:text="@string/password"
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" android:gravity="center_vertical" 
						/>
					<TextView android:text=" "
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" android:gravity="center_vertical" />
				</LinearLayout>
				<LinearLayout android:orientation="vertical"
					android:layout_weight="1" android:layout_width="0dp"
					android:layout_height="fill_parent">
					<EditText android:id="@+login/username"
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" 
						android:text=""
						android:nextFocusRight="@+login/password"
						android:nextFocusDown="@+login/password"
						android:nextFocusForward="@+login/password"/>
					<EditText android:id="@+login/password"
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" android:inputType="textPassword"
						android:text=""
						android:nextFocusLeft="@+login/username"
						android:nextFocusUp="@+login/username"
						android:nextFocusRight="@+login/valid"
						android:nextFocusDown="@+login/valid"
						android:nextFocusForward="@+login/valid"/>
					<Button  android:id="@+login/valid"
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" android:text="Valider"
						
						android:nextFocusLeft="@+login/password"
						android:nextFocusUp="@+login/password"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout android:layout_margin="50dp"
			android:layout_width="fill_parent" android:layout_height="0dp"
			android:layout_weight="1" android:orientation="vertical"
			>
			<TextView android:text="@string/createaccount" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:textSize="30dp"
				android:background="@drawable/login_sub"/>

			<LinearLayout android:orientation="horizontal"
				android:padding="20dp"
				android:layout_height="fill_parent" android:layout_width="fill_parent"
				android:background="@drawable/login_down">
				<LinearLayout android:orientation="vertical"
					android:layout_weight="1" android:layout_width="0dp"
					android:layout_height="fill_parent">
					<TextView android:text="@string/login" android:layout_height="0dp"
						android:layout_width="fill_parent" android:layout_weight="1"
						android:gravity="center_vertical" />
					<TextView android:text="@string/password"
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" android:gravity="center_vertical" />
					<TextView android:text=" "
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" android:gravity="center_vertical" />
				</LinearLayout>
				<LinearLayout android:orientation="vertical"
					android:layout_weight="1" android:layout_width="0dp"
					android:layout_height="fill_parent">
					<EditText android:id="@+loginnew/username"
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" 
						android:nextFocusRight="@+loginnew/password"
						android:nextFocusDown="@+loginnew/password"
						android:nextFocusForward="@+loginnew/password"/>
					<EditText android:id="@+loginnew/password"
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" android:inputType="textPassword"
						android:nextFocusLeft="@+loginnew/username"
						android:nextFocusUp="@+loginnew/username"
						android:nextFocusRight="@+loginnew/valid"
						android:nextFocusDown="@+loginnew/valid"
						android:nextFocusForward="@+loginnew/valid"/>
					<Button  android:id="@+loginnew/valid"
						android:layout_height="0dp" android:layout_width="fill_parent"
						android:layout_weight="1" android:text="Valider"
						
						android:nextFocusLeft="@+loginnew/password"
						android:nextFocusUp="@+loginnew/password"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_height="0dp"
		android:layout_width="fill_parent" android:layout_weight="1">
	</LinearLayout>
</LinearLayout>
