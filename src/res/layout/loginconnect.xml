<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:background="@drawable/login_down">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:text="@string/login" android:layout_height="fill_parent"
			android:layout_width="0dp" android:layout_weight="1"
			android:gravity="center_vertical" />
		<EditText android:id="@+login/username"
			android:layout_height="wrap_content" android:layout_width="0dp"
			android:layout_weight="1" android:nextFocusRight="@+login/password"
			android:nextFocusDown="@+login/password" android:nextFocusForward="@+login/password" />
	</LinearLayout>


	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:text="@string/password" android:layout_height="fill_parent"
			android:layout_width="0dp"
			android:layout_weight="1" android:gravity="center_vertical" />
		<EditText android:id="@+login/password"
			android:layout_height="wrap_content" android:layout_width="0dp"
			android:layout_weight="1" android:inputType="textPassword"
			android:nextFocusLeft="@+login/username" android:nextFocusUp="@+login/username"
			android:nextFocusRight="@+login/valid" android:nextFocusDown="@+login/valid"
			android:nextFocusForward="@+login/valid" />
	</LinearLayout>


	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:text=" " android:layout_height="fill_parent"
			android:layout_width="0dp" android:layout_weight="1"
			android:gravity="center_vertical" />
		<Button android:id="@+login/valid" android:layout_height="wrap_content"
			android:layout_width="0dp" android:layout_weight="1"
			android:text="Valider" android:nextFocusLeft="@+login/password"
			android:nextFocusUp="@+login/password" />
	</LinearLayout>

    <com.inmobi.androidsdk.IMAdView
        android:id="@+principal/adview"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        adSlot="15"
        appId="4028cb1334ef46a90134ffb035ec01f9" />
</LinearLayout>